
<% if(typeof singleFeaturedPosts != 'undefined') { %>
	<% singleFeaturedPosts.forEach(post => { %>
	<% let postDate = new Date(post.article_date_time); %>

	<!-- Single Featured Post -->
	<div class="single-blog-post small-featured-post d-flex">
		<div class="post-thumb">
				<a href="#"><img src="<%= post.img %>" alt=""></a>
		</div>
		<div class="post-data">
				<a href="#" class="post-catagory"><%= post.category %></a>
				<div class="post-meta">
						<a href="#" class="post-title">
								<h6><%= post.txt %></h6>
						</a>
						<p class="post-date"><%- dateAndTime.format(postDate,'[<span>]h:mm A[</span>] | [<span>]MMMM DD[</span>]') %></p>
						<!-- [] around the <span>, because, if not, it'll think the 's' in 'span' stands for seconds -->
						<!-- Also note, that instead of = we use - -->	
				</div>
		</div>
	</div>

	<% }) %>
<% } %>